# =============================================================================
# APP OVERLAY - DEV
# =============================================================================
# Dev-specific overrides for application service.
# =============================================================================

services:
  [[ .service_name ]]:
    image: [[ .docker_image ]]:latest
    env_file:
      - app/overlays/dev/.env
[[ if .vault ]]
    volumes:
      - ./ops/configs/vault/entrypoint.sh:/entrypoint.sh:ro
    entrypoint: ["/entrypoint.sh"]
[[ end ]]
    command: ["[[ .app_command | splitWords | joinQuoted ]]"]
[[ if .vault_agent ]]
    depends_on:
      - vault-agent
[[ end ]]
[[ if .watchtower ]]
    labels:
      - "com.centurylinklabs.watchtower.scope=dev"
[[ end ]]
