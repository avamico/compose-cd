global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers: []

rule_files: []

scrape_configs:
  # Prometheus self-monitoring
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  # Application metrics
  - job_name: "[[ .service_name ]]"
    static_configs:
      - targets: ["[[ .service_name ]]:[[ .app_port ]]"]
    metrics_path: /metrics
    scrape_interval: 30s
[[ if .cadvisor ]]

  # Docker container metrics via cAdvisor
  - job_name: "cadvisor"
    static_configs:
      - targets: ["cadvisor:8080"]
[[ end ]]
