# =============================================================================
# OPS OVERLAY - PROD
# =============================================================================
# Prod-specific overrides for ops services.
# =============================================================================

[[ if or .caddy .traefik .grafana .vault_agent .watchtower .prometheus .loki ]]
services:
[[ if .caddy ]]
  caddy:
    env_file:
      - ops/overlays/prod/.env
[[ end ]]
[[ if .traefik ]]

  traefik:
    env_file:
      - ops/overlays/prod/.env
[[ end ]]
[[ if .grafana ]]

  grafana:
    env_file:
      - ops/overlays/prod/.env
[[ end ]]
[[ if .prometheus ]]

  prometheus:
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--storage.tsdb.path=/prometheus"
      - "--storage.tsdb.retention.time=90d"
      - "--web.enable-lifecycle"
[[ end ]]
[[ if .loki ]]

  loki:
    volumes:
      - ./ops/overlays/prod/loki-config.yml:/etc/loki/local-config.yaml:ro
      - loki_data:/loki
[[ end ]]
[[ if .vault_agent ]]

  vault-agent:
    environment:
      - VAULT_SECRET_PATH=[[ .service_name ]]
      - VAULT_SECRET_ENV=prod
[[ end ]]
[[ if .watchtower ]]

  watchtower:
    env_file:
      - ops/overlays/prod/.env
    environment:
      - WATCHTOWER_POLL_INTERVAL=0
      - REPO_USER=${REPO_USER:-}
      - REPO_PASS=${REPO_PASS:-}
    command: --scope prod
[[ end ]]
[[ end ]]
