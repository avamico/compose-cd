{% if grafana %}

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change-me-in-production
GF_SERVER_ROOT_URL=https://grafana.dev.{{ domain }}
{% endif %}
