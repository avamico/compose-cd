# =============================================================================
# PROVIDER CREDENTIALS
# =============================================================================
{% if cloudflare %}
variable "cloudflare_api_token" {
  description = "Cloudflare API token"
  type        = string
  sensitive   = true
}
{% endif %}
{% if hetzner %}

variable "hetzner_api_token" {
  description = "Hetzner Cloud API token"
  type        = string
  sensitive   = true
  default     = ""
}
{% endif %}
{% if supabase %}

variable "supabase_access_token" {
  description = "Supabase access token"
  type        = string
  sensitive   = true
}
{% endif %}
{% if cloudflare %}

# =============================================================================
# CLOUDFLARE
# =============================================================================
variable "cloudflare_account_id" {
  description = "Cloudflare Account ID"
  type        = string
}

variable "cloudflare_zone_id" {
  description = "Cloudflare Zone ID"
  type        = string
}

variable "domain" {
  description = "Base domain"
  type        = string
}

variable "github_owner" {
  description = "GitHub organization or username"
  type        = string
}

variable "github_frontend_repo" {
  description = "GitHub repository name for frontend"
  type        = string
}

variable "backend_server_ip" {
  description = "IP address of the backend VPS"
  type        = string
}

variable "frontend_custom_domain" {
  description = "Custom domain for frontend (optional)"
  type        = string
  default     = ""
}
{% endif %}
{% if supabase %}

# =============================================================================
# SUPABASE
# =============================================================================
variable "supabase_organization_id" {
  description = "Supabase organization ID"
  type        = string
}

variable "supabase_database_password" {
  description = "Supabase database password"
  type        = string
  sensitive   = true
}

variable "supabase_region" {
  description = "Supabase project region"
  type        = string
  default     = "ap-southeast-1"
}

variable "supabase_anon_key" {
  description = "Supabase anonymous API key"
  type        = string
  sensitive   = true
  default     = ""
}
{% endif %}
{% if hetzner %}

# =============================================================================
# HETZNER
# =============================================================================
variable "create_hetzner_firewall" {
  description = "Whether to create Hetzner firewall"
  type        = bool
  default     = false
}

variable "ssh_allowed_ips" {
  description = "IP addresses allowed for SSH"
  type        = list(string)
  default     = ["0.0.0.0/0", "::/0"]
}
{% endif %}
